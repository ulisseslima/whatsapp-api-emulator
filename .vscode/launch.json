{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Mock WhatsApp Server",
            "program": "${workspaceFolder}/mock-whatsapp.js",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "restart": true,
            "runtimeArgs": ["--nolazy"],
            "env": {
                "NODE_ENV": "development",
                "MOCK_PORT": "3001"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run with Nodemon (Mock Server)",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/mock-whatsapp.js",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "MOCK_PORT": "3001"
            }
        }
    ]
}